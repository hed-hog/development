import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "quotes";

export function useQuotesCreate() {
  const { quotesCreate } = requests();
  return useDefaultMutation(scope, "create", quotesCreate);
}

export function useQuotesDelete() {
  const { quotesDelete } = requests();
  return useDefaultMutation(scope, "delete", quotesDelete);
}

export function useQuotesUpdate() {
  const { quotesUpdate } = requests();
  return useDefaultMutation(scope, "update", quotesUpdate);
}

export function useQuotesGet(id: number) {
  const { quotesGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => quotesGet(id),
  });
}
