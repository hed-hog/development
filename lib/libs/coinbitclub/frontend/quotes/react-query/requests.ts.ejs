import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { Quotes } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const quotesList = async (params: PaginationParams) => {
    return request<PaginationResult<Quotes>>({
      url: "/quotes",
      params,
    }).then((res) => res.data);
  };

  const quotesGet = async (id: number) => {
    return request<Quotes>({
      url: `/quotes/${id}`,
    }).then((res) => res.data);
  };

  const quotesCreate = async (params: { data: Quotes }) => {
    const { data } = params;
    return request<Quotes>({
      url: "/quotes",
      method: HttpMethod.POST,
      data: data,
    }).then((res) => res.data);
  };

  const quotesDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/quotes",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const quotesUpdate = async (params: { id: number; data: Quotes }) => {
    const { id, data } = params;
    return request<Quotes>({
      url: `/quotes/${id}`,
      method: HttpMethod.PATCH,
      data: data,
    }).then((res) => res.data);
  };

  return {
    quotesCreate,
    quotesUpdate,
    quotesDelete,
    quotesList,
    quotesGet,
  };
}
