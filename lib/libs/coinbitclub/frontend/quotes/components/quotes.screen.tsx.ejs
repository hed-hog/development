import { PageTitle } from '@/components/custom/page-title';
import DataPanel from '@/components/panels/data-panel';
import { useQuotesDelete } from '@/features/coinbitclub/quotes';
import { useApp } from '@/hooks/use-app';
import { isPlural } from '@/lib/utils';
import { Quotes } from '@/types/models';
import { IconEdit, IconPlus, IconTrash } from '@tabler/icons-react';
import { useState } from 'react';
import { useTranslation } from 'react-i18next';
import QuotesCreatePanel from './components/quotes-create-panel';
import QuotesUpdatePanel from './components/quotes-update-panel';

export default function Page() {
  const [selectedItems, setSelectedItems] = useState<Quotes[]>([]);
  const { mutate: deleteQuotes } = useQuotesDelete();
  const { openSheet, confirm, closeSheet } = useApp();
  const { t } = useTranslation([
    'coinbitclub.quotes',
    'modules',
    'actions',
    'fields'
  ]);

  const openCreate = () => {
    const id = openSheet({
      title: t('create', { ns: 'coinbitclub.quotes' }),
      description: t('createText', { ns: 'coinbitclub.quotes' }),
      children: () => <QuotesCreatePanel onCreated={() => closeSheet(id)} />
    });

    return id;
  };

  const openDelete = (items: Quotes[]) => {
    return confirm({
      title: `${t('delete', { ns: 'coinbitclub.quotes' })} ${items.length} ${isPlural(items.length) ? t('items', { ns: 'actions' }) : t('item', { ns: 'actions' })}`,
      description: t('deleteText', { ns: 'coinbitclub.quotes' })
    })
      .then(() =>
        deleteQuotes(
          items.map((item) => item.id).filter((id) => id !== undefined)
        )
      )
      .catch(() => setSelectedItems(items));
  };

  const openUpdate = (item: Quotes) => {
    const id = openSheet({
      children: () => (
        <QuotesUpdatePanel data={item} onUpdated={() => closeSheet(id)} />
      ),
      title: t('edit', { ns: 'coinbitclub.quotes' }),
      description: t('editText', { ns: 'coinbitclub.quotes' })
    });

    return id;
  };

  return (
    <>
      <PageTitle title={t('quotes', { ns: 'modules' })} />
      <DataPanel
        url="/quotes"
        layout="table"
        id="quotes"
        selectable
        columns={[
          { key: 'id', header: 'ID', width: 64, isLocale: false },

          {
            key: 'name',
            header: t('quotes.name', { ns: 'fields' }),
            isLocale: false
          },

          {
            key: 'header',
            header: t('quotes.header', { ns: 'fields' }),
            isLocale: false
          },

          {
            key: 'filter',
            header: t('quotes.filter', { ns: 'fields' }),
            isLocale: false
          }
        ]}
        selected={selectedItems as Quotes[]}
        multiple
        hasSearch
        sortable
        onItemDoubleClick={(item) => openUpdate(item)}
        menuActions={[
          {
            icon: <IconEdit className="mr-1 w-8 cursor-pointer" />,
            label: t('edit', { ns: 'actions' }),
            tooltip: t('editTooltip', { ns: 'coinbitclub.quotes' }),
            handler: (items: Quotes[]) => {
              if (items.length === 1) openUpdate(items[0]);
            },
            show: 'once'
          },
          {
            icon: <IconTrash className="mr-1 w-8 cursor-pointer" />,
            label: t('delete', { ns: 'actions' }),
            tooltip: t('deleteTooltip', { ns: 'coinbitclub.quotes' }),
            variant: 'destructive',
            handler: (items: Quotes[]) => {
              openDelete(items);
            },
            show: 'some'
          },
          {
            icon: <IconPlus className="mr-1 w-8 cursor-pointer" />,
            label: t('create', { ns: 'actions' }),
            tooltip: t('createTooltip', { ns: 'coinbitclub.quotes' }),
            variant: 'default',
            handler: () => {
              openCreate();
            },
            show: 'none'
          }
        ]}
      />
    </>
  );
}
