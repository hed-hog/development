import FormPanel, { FormPanelRef } from "@/components/panels/form-panel";

import { useQuotesCreate } from "@/features/coinbitclub/quotes";
import { Quotes } from "@/types/models";
import { forwardRef, useImperativeHandle, useRef } from "react";
import { useTranslation } from "react-i18next";

export type QuotesCreatePanelRef = {
  submit: () => void;
};

export type QuotesCreatePanelProps = {
  onCreated?: (data: Quotes) => void;
};

const QuotesCreatePanel = forwardRef(
  ({ onCreated }: QuotesCreatePanelProps, ref) => {
    const formRef = useRef<FormPanelRef>(null);
    const { t } = useTranslation(["actions", "fields", "translations"]);
    const { mutateAsync: createQuotes } = useQuotesCreate();

    useImperativeHandle(
      ref,
      () => ({
        submit: () => {
          formRef.current?.submit();
        },
      }),
      [formRef],
    );

    return (
      <FormPanel
        ref={formRef}
        fields={[]}
        button={{ text: t("create", { ns: "actions" }) }}
        onSubmit={async (data) => {
          const createdData = await createQuotes({
            data,
          });
          if (typeof onCreated === "function") {
            onCreated(createdData as any);
          }
        }}
      />
    );
  },
);

QuotesCreatePanel.displayName = "QuotesCreatePanel";

export default QuotesCreatePanel;
