import { PageTitle } from '@/components/custom/page-title';
import DataPanel from '@/components/panels/data-panel';
import { useQuoteDelete } from '@/features/coinbitclub/quote';
import { useApp } from '@/hooks/use-app';
import { isPlural } from '@/lib/utils';
import { Quote } from '@/types/models';
import { IconEdit, IconPlus, IconTrash } from '@tabler/icons-react';
import { useState } from 'react';
import { useTranslation } from 'react-i18next';
import QuoteCreatePanel from './components/quote-create-panel';
import QuoteUpdatePanel from './components/quote-update-panel';

export default function Page() {
  const [selectedItems, setSelectedItems] = useState<Quote[]>([]);
  const { mutate: deleteQuote } = useQuoteDelete();
  const { openSheet, confirm, closeSheet } = useApp();
  const { t } = useTranslation([
    'coinbitclub.quote',
    'modules',
    'actions',
    'fields'
  ]);

  const openCreate = () => {
    const id = openSheet({
      title: t('create', { ns: 'coinbitclub.quote' }),
      description: t('createText', { ns: 'coinbitclub.quote' }),
      children: () => <QuoteCreatePanel onCreated={() => closeSheet(id)} />
    });

    return id;
  };

  const openDelete = (items: Quote[]) => {
    return confirm({
      title: `${t('delete', { ns: 'coinbitclub.quote' })} ${items.length} ${isPlural(items.length) ? t('items', { ns: 'actions' }) : t('item', { ns: 'actions' })}`,
      description: t('deleteText', { ns: 'coinbitclub.quote' })
    })
      .then(() =>
        deleteQuote(
          items.map((item) => item.id).filter((id) => id !== undefined)
        )
      )
      .catch(() => setSelectedItems(items));
  };

  const openUpdate = (item: Quote) => {
    const id = openSheet({
      children: () => (
        <QuoteUpdatePanel data={item} onUpdated={() => closeSheet(id)} />
      ),
      title: t('edit', { ns: 'coinbitclub.quote' }),
      description: t('editText', { ns: 'coinbitclub.quote' })
    });

    return id;
  };

  return (
    <>
      <PageTitle title={t('quote', { ns: 'modules' })} />
      <DataPanel
        url="/quote"
        layout="table"
        id="quote"
        selectable
        columns={[
          { key: 'id', header: 'ID', width: 64, isLocale: false },

          {
            key: 'name',
            header: t('quote.name', { ns: 'fields' }),
            isLocale: false
          },

          {
            key: 'header',
            header: t('quote.header', { ns: 'fields' }),
            isLocale: false
          },

          {
            key: 'filter',
            header: t('quote.filter', { ns: 'fields' }),
            isLocale: false
          }
        ]}
        selected={selectedItems as Quote[]}
        multiple
        hasSearch
        sortable
        onItemDoubleClick={(item) => openUpdate(item)}
        menuActions={[
          {
            icon: <IconEdit className="mr-1 w-8 cursor-pointer" />,
            label: t('edit', { ns: 'actions' }),
            tooltip: t('editTooltip', { ns: 'coinbitclub.quote' }),
            handler: (items: Quote[]) => {
              if (items.length === 1) openUpdate(items[0]);
            },
            show: 'once'
          },
          {
            icon: <IconTrash className="mr-1 w-8 cursor-pointer" />,
            label: t('delete', { ns: 'actions' }),
            tooltip: t('deleteTooltip', { ns: 'coinbitclub.quote' }),
            variant: 'destructive',
            handler: (items: Quote[]) => {
              openDelete(items);
            },
            show: 'some'
          },
          {
            icon: <IconPlus className="mr-1 w-8 cursor-pointer" />,
            label: t('create', { ns: 'actions' }),
            tooltip: t('createTooltip', { ns: 'coinbitclub.quote' }),
            variant: 'default',
            handler: () => {
              openCreate();
            },
            show: 'none'
          }
        ]}
      />
    </>
  );
}
