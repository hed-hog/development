import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "quote";

export function useQuoteCreate() {
  const { quoteCreate } = requests();
  return useDefaultMutation(scope, "create", quoteCreate);
}

export function useQuoteDelete() {
  const { quoteDelete } = requests();
  return useDefaultMutation(scope, "delete", quoteDelete);
}

export function useQuoteUpdate() {
  const { quoteUpdate } = requests();
  return useDefaultMutation(scope, "update", quoteUpdate);
}

export function useQuoteGet(id: number) {
  const { quoteGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => quoteGet(id),
  });
}
