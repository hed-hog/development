import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { Quote } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const quoteList = async (params: PaginationParams) => {
    return request<PaginationResult<Quote>>({
      url: "/quote",
      params,
    }).then((res) => res.data);
  };

  const quoteGet = async (id: number) => {
    return request<Quote>({
      url: `/quote/${id}`,
    }).then((res) => res.data);
  };

  const quoteCreate = async (params: { data: Quote }) => {
    const { data } = params;
    return request<Quote>({
      url: "/quote",
      method: HttpMethod.POST,
      data: data,
    }).then((res) => res.data);
  };

  const quoteDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/quote",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const quoteUpdate = async (params: { id: number; data: Quote }) => {
    const { id, data } = params;
    return request<Quote>({
      url: `/quote/${id}`,
      method: HttpMethod.PATCH,
      data: data,
    }).then((res) => res.data);
  };

  return {
    quoteCreate,
    quoteUpdate,
    quoteDelete,
    quoteList,
    quoteGet,
  };
}
