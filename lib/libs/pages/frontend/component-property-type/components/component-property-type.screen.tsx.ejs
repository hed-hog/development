import { PageTitle } from "@/components/custom/page-title";
import DataPanel from "@/components/panels/data-panel";
import { useComponentPropertyTypeDelete } from "@/features/component_property_type/component-property-type";
import { useApp } from "@/hooks/use-app";
import { isPlural } from "@/lib/utils";
import { ComponentPropertyType } from "@/types/models";
import { IconEdit, IconPlus, IconTrash } from "@tabler/icons-react";
import { useState } from "react";
import { useTranslation } from "react-i18next";
import ComponentPropertyTypeCreatePanel from "./components/component-property-type-create-panel";
import ComponentPropertyTypeUpdatePanel from "./components/component-property-type-update-panel";

export default function Page() {
  const [selectedItems, setSelectedItems] = useState<ComponentPropertyType[]>(
    [],
  );
  const { mutate: deleteComponentPropertyType } =
    useComponentPropertyTypeDelete();
  const { openSheet, confirm, closeSheet } = useApp();
  const { t } = useTranslation([
    "component-property-type",
    "modules",
    "actions",
  ]);

  const openCreate = () => {
    const id = openSheet({
      title: t("create", { ns: "actions" }),
      description: t("createText", { ns: "component-property-type" }),
      children: () => (
        <ComponentPropertyTypeCreatePanel onCreated={() => closeSheet(id)} />
      ),
    });

    return id;
  };

  const openDelete = (items: ComponentPropertyType[]) => {
    return confirm({
      title: `${t("delete", { ns: "actions" })} ${items.length} ${isPlural(items.length) ? t("items", { ns: "actions" }) : t("item", { ns: "actions" })}`,
      description: t("deleteText", { ns: "component-property-type" }),
    })
      .then(() =>
        deleteComponentPropertyType(
          items.map((item) => item.id).filter((id) => id !== undefined),
        ),
      )
      .catch(() => setSelectedItems(items));
  };

  const openUpdate = (item: ComponentPropertyType) => {
    const id = openSheet({
      children: () => (
        <ComponentPropertyTypeUpdatePanel
          data={item}
          onUpdated={() => closeSheet(id)}
        />
      ),
      title: t("edit", { ns: "component-property-type" }),
      description: t("editText", { ns: "component-property-type" }),
    });

    return id;
  };

  return (
    <>
      <PageTitle title={t("componentPropertyType", { ns: "modules" })} />
      <DataPanel
        url="/component-property-type"
        layout="table"
        id="component-property-type"
        selectable
        columns={[
          { key: "id", header: "ID", width: 64 },
          { key: "name", header: t("name", { ns: "component-property-type" }) },
        ]}
        selected={selectedItems as ComponentPropertyType[]}
        multiple
        hasSearch
        sortable
        onItemDoubleClick={(item) => openUpdate(item)}
        menuActions={[
          {
            icon: <IconEdit className="mr-1 w-8 cursor-pointer" />,
            label: t("edit", { ns: "actions" }),
            tooltip: t("editTooltip", { ns: "component-property-type" }),
            handler: (items: ComponentPropertyType[]) => {
              if (items.length === 1) openUpdate(items[0]);
            },
            show: "once",
          },
          {
            icon: <IconTrash className="mr-1 w-8 cursor-pointer" />,
            label: t("delete", { ns: "actions" }),
            tooltip: t("deleteTooltip", { ns: "component-property-type" }),
            variant: "destructive",
            handler: (items: ComponentPropertyType[]) => {
              openDelete(items);
            },
            show: "some",
          },
          {
            icon: <IconPlus className="mr-1 w-8 cursor-pointer" />,
            label: t("create", { ns: "actions" }),
            tooltip: t("createTooltip", { ns: "component-property-type" }),
            variant: "default",
            handler: () => {
              openCreate();
            },
            show: "none",
          },
        ]}
      />
    </>
  );
}
