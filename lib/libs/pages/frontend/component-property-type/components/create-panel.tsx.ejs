import FormPanel, {
  FormPanelRef,
  getFieldsLocale,
} from "@/components/panels/form-panel";

import { useComponentPropertyTypeCreate } from "@/features/pages/component-property-type";
import { ComponentPropertyType } from "@/types/models";
import { forwardRef, useImperativeHandle, useRef } from "react";
import { useTranslation } from "react-i18next";

export type ComponentPropertyTypeCreatePanelRef = {
  submit: () => void;
};

export type ComponentPropertyTypeCreatePanelProps = {
  onCreated?: (data: ComponentPropertyType) => void;
};

const ComponentPropertyTypeCreatePanel = forwardRef(
  ({ onCreated }: ComponentPropertyTypeCreatePanelProps, ref) => {
    const formRef = useRef<FormPanelRef>(null);
    const { t } = useTranslation(["actions"]);
    const { mutateAsync: createComponentPropertyType } =
      useComponentPropertyTypeCreate();

    useImperativeHandle(
      ref,
      () => ({
        submit: () => {
          formRef.current?.submit();
        },
      }),
      [formRef],
    );

    return (
      <FormPanel
        ref={formRef}
        fields={[...getFieldsLocale([{ name: "name" }])]}
        button={{ text: t("create", { ns: "actions" }) }}
        onSubmit={async (data) => {
          const createdData = await createComponentPropertyType(data);
          if (typeof onCreated === "function") {
            onCreated(createdData);
          }
        }}
      />
    );
  },
);

ComponentPropertyTypeCreatePanel.displayName =
  "ComponentPropertyTypeCreatePanel";

export default ComponentPropertyTypeCreatePanel;
