import FormPanel, {
  FormPanelRef,
  getFieldsLocale,
} from "@/components/panels/form-panel";
import { Overlay } from "@/components/custom/overlay";
import { TabPanel } from "@/components/panels/tab-panel";

import {
  useComponentPropertyTypeGet,
  useComponentPropertyTypeUpdate,
} from "@/features/pages/component-property-type";
import useEffectAfterFirstUpdate from "@/hooks/use-effect-after-first-update";
import { ComponentPropertyType } from "@/types/models";
import { forwardRef, useImperativeHandle, useRef } from "react";
import { useTranslation } from "react-i18next";

export type ComponentPropertyTypeUpdatePanelProps = {
  data: ComponentPropertyType;
  onUpdated?: (data: ComponentPropertyType) => void;
};

const ComponentPropertyTypeUpdatePanel = forwardRef(
  ({ data, onUpdated }: ComponentPropertyTypeUpdatePanelProps, ref) => {
    const { t } = useTranslation(["actions"]);
    const { data: item, isLoading } = useComponentPropertyTypeGet(
      data.id as number,
    );
    const { mutate: componentPropertyTypeUpdate } =
      useComponentPropertyTypeUpdate();
    const formRef = useRef<FormPanelRef>(null);

    useEffectAfterFirstUpdate(() => {
      if (item && formRef.current) {
        formRef.current.setValuesFromItem(item);
      }
    }, [item]);

    useImperativeHandle(ref, () => ({}));

    return (
      <TabPanel
        activeTabIndex={0}
        tabs={[
          {
            title: t("details", { ns: "actions" }),
            children: (
              <Overlay loading={isLoading}>
                <FormPanel
                  ref={formRef}
                  fields={[...getFieldsLocale([{ name: "name" }])]}
                  button={{ text: t("save", { ns: "actions" }) }}
                  onSubmit={(data) => {
                    componentPropertyTypeUpdate({ id: data.id, data });
                    if (typeof onUpdated === "function") {
                      onUpdated(data);
                    }
                  }}
                />
              </Overlay>
            ),
          },
        ]}
      />
    );
  },
);

ComponentPropertyTypeUpdatePanel.displayName =
  "ComponentPropertyTypeUpdatePanel";

export default ComponentPropertyTypeUpdatePanel;
