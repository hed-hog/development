import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "component-property-type";

export function useComponentPropertyTypeCreate() {
  const { componentPropertyTypeCreate } = requests();
  return useDefaultMutation(scope, "create", componentPropertyTypeCreate);
}

export function useComponentPropertyTypeDelete() {
  const { componentPropertyTypeDelete } = requests();
  return useDefaultMutation(scope, "delete", componentPropertyTypeDelete);
}

export function useComponentPropertyTypeUpdate() {
  const { componentPropertyTypeUpdate } = requests();
  return useDefaultMutation(scope, "update", componentPropertyTypeUpdate);
}

export function useComponentPropertyTypeGet(id: number) {
  const { componentPropertyTypeGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => componentPropertyTypeGet(id),
  });
}
