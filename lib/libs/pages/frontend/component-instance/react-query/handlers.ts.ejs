import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "component-instance";

export function useComponentInstanceCreate() {
  const { componentInstanceCreate } = requests();
  return useDefaultMutation(scope, "create", componentInstanceCreate);
}

export function useComponentInstanceDelete() {
  const { componentInstanceDelete } = requests();
  return useDefaultMutation(scope, "delete", componentInstanceDelete);
}

export function useComponentInstanceUpdate() {
  const { componentInstanceUpdate } = requests();
  return useDefaultMutation(scope, "update", componentInstanceUpdate);
}

export function useComponentInstanceGet(id: number) {
  const { componentInstanceGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => componentInstanceGet(id),
  });
}
