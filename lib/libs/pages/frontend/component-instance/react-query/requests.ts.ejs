import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { ComponentInstance } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const componentInstanceList = async (params: PaginationParams) => {
    return request<PaginationResult<ComponentInstance>>({
      url: "/component-instance",
      params,
    }).then((res) => res.data);
  };

  const componentInstanceGet = async (id: number) => {
    return request<ComponentInstance>({
      url: `/component-instance/${id}`,
    }).then((res) => res.data);
  };

  const componentInstanceCreate = async (data: ComponentInstance) => {
    return request<ComponentInstance>({
      url: "/component-instance",
      method: HttpMethod.POST,
      data: data,
    }).then((res) => res.data);
  };

  const componentInstanceDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/component-instance",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const componentInstanceUpdate = async (params: {
    id: number;
    data: ComponentInstance;
  }) => {
    const { id, data } = params;
    return request<ComponentInstance>({
      url: `/component-instance/${id}`,
      method: HttpMethod.PATCH,
      data: data,
    }).then((res) => res.data);
  };

  return {
    componentInstanceCreate,
    componentInstanceUpdate,
    componentInstanceDelete,
    componentInstanceList,
    componentInstanceGet,
  };
}
