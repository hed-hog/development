import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "component-property";

export function useComponentPropertyCreate() {
  const { componentPropertyCreate } = requests();
  return useDefaultMutation(scope, "create", componentPropertyCreate);
}

export function useComponentPropertyDelete() {
  const { componentPropertyDelete } = requests();
  return useDefaultMutation(scope, "delete", componentPropertyDelete);
}

export function useComponentPropertyUpdate() {
  const { componentPropertyUpdate } = requests();
  return useDefaultMutation(scope, "update", componentPropertyUpdate);
}

export function useComponentPropertyGet(id: number) {
  const { componentPropertyGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => componentPropertyGet(id),
  });
}
