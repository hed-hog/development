import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "component-instance-property";

export function useComponentInstancePropertyCreate() {
  const { componentInstancePropertyCreate } = requests();
  return useDefaultMutation(scope, "create", componentInstancePropertyCreate);
}

export function useComponentInstancePropertyDelete() {
  const { componentInstancePropertyDelete } = requests();
  return useDefaultMutation(scope, "delete", componentInstancePropertyDelete);
}

export function useComponentInstancePropertyUpdate() {
  const { componentInstancePropertyUpdate } = requests();
  return useDefaultMutation(scope, "update", componentInstancePropertyUpdate);
}

export function useComponentInstancePropertyGet(id: number) {
  const { componentInstancePropertyGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => componentInstancePropertyGet(id),
  });
}
