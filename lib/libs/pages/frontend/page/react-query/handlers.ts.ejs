import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "page";

export function usePageCreate() {
  const { pageCreate } = requests();
  return useDefaultMutation(scope, "create", pageCreate);
}

export function usePageDelete() {
  const { pageDelete } = requests();
  return useDefaultMutation(scope, "delete", pageDelete);
}

export function usePageUpdate() {
  const { pageUpdate } = requests();
  return useDefaultMutation(scope, "update", pageUpdate);
}

export function usePageGet(id: number) {
  const { pageGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => pageGet(id),
  });
}
