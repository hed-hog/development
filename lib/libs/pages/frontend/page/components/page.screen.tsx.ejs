import { PageTitle } from "@/components/custom/page-title";
import DataPanel from "@/components/panels/data-panel";
import { usePageDelete } from "@/features/page/page";
import { useApp } from "@/hooks/use-app";
import { isPlural } from "@/lib/utils";
import { Page } from "@/types/models";
import { IconEdit, IconPlus, IconTrash } from "@tabler/icons-react";
import { useState } from "react";
import { useTranslation } from "react-i18next";
import PageCreatePanel from "./components/page-create-panel";
import PageUpdatePanel from "./components/page-update-panel";

export default function Page() {
  const [selectedItems, setSelectedItems] = useState<Page[]>([]);
  const { mutate: deletePage } = usePageDelete();
  const { openSheet, confirm, closeSheet } = useApp();
  const { t } = useTranslation(["page", "modules", "actions"]);

  const openCreate = () => {
    const id = openSheet({
      title: t("create", { ns: "actions" }),
      description: t("createText", { ns: "page" }),
      children: () => <PageCreatePanel onCreated={() => closeSheet(id)} />,
    });

    return id;
  };

  const openDelete = (items: Page[]) => {
    return confirm({
      title: `${t("delete", { ns: "actions" })} ${items.length} ${isPlural(items.length) ? t("items", { ns: "actions" }) : t("item", { ns: "actions" })}`,
      description: t("deleteText", { ns: "page" }),
    })
      .then(() =>
        deletePage(
          items.map((item) => item.id).filter((id) => id !== undefined),
        ),
      )
      .catch(() => setSelectedItems(items));
  };

  const openUpdate = (item: Page) => {
    const id = openSheet({
      children: () => (
        <PageUpdatePanel data={item} onUpdated={() => closeSheet(id)} />
      ),
      title: t("edit", { ns: "page" }),
      description: t("editText", { ns: "page" }),
    });

    return id;
  };

  return (
    <>
      <PageTitle title={t("page", { ns: "modules" })} />
      <DataPanel
        url="/page"
        layout="table"
        id="page"
        selectable
        columns={[
          { key: "id", header: "ID", width: 64 },
          { key: "name", header: t("name", { ns: "page" }) },
        ]}
        selected={selectedItems as Page[]}
        multiple
        hasSearch
        sortable
        onItemDoubleClick={(item) => openUpdate(item)}
        menuActions={[
          {
            icon: <IconEdit className="mr-1 w-8 cursor-pointer" />,
            label: t("edit", { ns: "actions" }),
            tooltip: t("editTooltip", { ns: "page" }),
            handler: (items: Page[]) => {
              if (items.length === 1) openUpdate(items[0]);
            },
            show: "once",
          },
          {
            icon: <IconTrash className="mr-1 w-8 cursor-pointer" />,
            label: t("delete", { ns: "actions" }),
            tooltip: t("deleteTooltip", { ns: "page" }),
            variant: "destructive",
            handler: (items: Page[]) => {
              openDelete(items);
            },
            show: "some",
          },
          {
            icon: <IconPlus className="mr-1 w-8 cursor-pointer" />,
            label: t("create", { ns: "actions" }),
            tooltip: t("createTooltip", { ns: "page" }),
            variant: "default",
            handler: () => {
              openCreate();
            },
            show: "none",
          },
        ]}
      />
    </>
  );
}
