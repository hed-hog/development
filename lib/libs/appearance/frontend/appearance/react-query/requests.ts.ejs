import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { Appearance } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const appearanceUpdate = async (
    params: {
      slug: string
      value: string
    }[]
  ) => {
    return request({
      url: `/appearance`,
      method: 'put',
      data: { setting: params },
    }).then((res) => res.data)
  }

  const appearanceList = async (params: PaginationParams) => {
    return request<PaginationResult<Appearance>>({
      url: "/appearance",
      params,
    }).then((res) => res.data);
  };

  return {
    appearanceUpdate,
    appearanceList,
  };
}
