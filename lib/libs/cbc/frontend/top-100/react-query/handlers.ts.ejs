import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "top-100";

export function useTop100Create() {
  const { top100Create } = requests();
  return useDefaultMutation(scope, "create", top100Create);
}

export function useTop100Delete() {
  const { top100Delete } = requests();
  return useDefaultMutation(scope, "delete", top100Delete);
}

export function useTop100Update() {
  const { top100Update } = requests();
  return useDefaultMutation(scope, "update", top100Update);
}

export function useTop100Get(id: number) {
  const { top100Get } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => top100Get(id),
  });
}
