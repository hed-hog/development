import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "coin-variation-type";

export function useCoinVariationTypeCreate() {
  const { coinVariationTypeCreate } = requests();
  return useDefaultMutation(scope, "create", coinVariationTypeCreate);
}

export function useCoinVariationTypeDelete() {
  const { coinVariationTypeDelete } = requests();
  return useDefaultMutation(scope, "delete", coinVariationTypeDelete);
}

export function useCoinVariationTypeUpdate() {
  const { coinVariationTypeUpdate } = requests();
  return useDefaultMutation(scope, "update", coinVariationTypeUpdate);
}

export function useCoinVariationTypeGet(id: number) {
  const { coinVariationTypeGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => coinVariationTypeGet(id),
  });
}
