import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "simulations";

export function useSimulationsCreate() {
  const { simulationsCreate } = requests();
  return useDefaultMutation(scope, "create", simulationsCreate);
}

export function useSimulationsDelete() {
  const { simulationsDelete } = requests();
  return useDefaultMutation(scope, "delete", simulationsDelete);
}

export function useSimulationsUpdate() {
  const { simulationsUpdate } = requests();
  return useDefaultMutation(scope, "update", simulationsUpdate);
}

export function useSimulationsGet(id: number) {
  const { simulationsGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => simulationsGet(id),
  });
}
