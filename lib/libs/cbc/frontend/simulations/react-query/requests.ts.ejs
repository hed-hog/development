import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { Simulations } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const simulationsList = async (params: PaginationParams) => {
    return request<PaginationResult<Simulations>>({
      url: "/simulations",
      params,
    }).then((res) => res.data);
  };

  const simulationsGet = async (id: number) => {
    return request<Simulations>({
      url: `/simulations/${id}`,
    }).then((res) => res.data);
  };

  const simulationsCreate = async (params: { data: Simulations }) => {
    const { data } = params;
    return request<Simulations>({
      url: "/simulations",
      method: HttpMethod.POST,
      data: data,
    }).then((res) => res.data);
  };

  const simulationsDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/simulations",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const simulationsUpdate = async (params: {
    id: number;
    data: Simulations;
  }) => {
    const { id, data } = params;
    return request<Simulations>({
      url: `/simulations/${id}`,
      method: HttpMethod.PATCH,
      data: data,
    }).then((res) => res.data);
  };

  return {
    simulationsCreate,
    simulationsUpdate,
    simulationsDelete,
    simulationsList,
    simulationsGet,
  };
}
