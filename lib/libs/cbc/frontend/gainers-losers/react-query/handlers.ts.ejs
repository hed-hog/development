import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "gainers-losers";

export function useGainersLosersCreate() {
  const { gainersLosersCreate } = requests();
  return useDefaultMutation(scope, "create", gainersLosersCreate);
}

export function useGainersLosersDelete() {
  const { gainersLosersDelete } = requests();
  return useDefaultMutation(scope, "delete", gainersLosersDelete);
}

export function useGainersLosersUpdate() {
  const { gainersLosersUpdate } = requests();
  return useDefaultMutation(scope, "update", gainersLosersUpdate);
}

export function useGainersLosersGet(id: number) {
  const { gainersLosersGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => gainersLosersGet(id),
  });
}
