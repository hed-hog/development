import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "top-variation";

export function useTopVariationCreate() {
  const { topVariationCreate } = requests();
  return useDefaultMutation(scope, "create", topVariationCreate);
}

export function useTopVariationDelete() {
  const { topVariationDelete } = requests();
  return useDefaultMutation(scope, "delete", topVariationDelete);
}

export function useTopVariationUpdate() {
  const { topVariationUpdate } = requests();
  return useDefaultMutation(scope, "update", topVariationUpdate);
}

export function useTopVariationGet(id: number) {
  const { topVariationGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => topVariationGet(id),
  });
}
