import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "person-custom";

export function usePersonCustomCreate() {
  const { personCustomCreate } = requests();
  return useDefaultMutation(scope, "create", personCustomCreate);
}

export function usePersonCustomDelete() {
  const { personCustomDelete } = requests();
  return useDefaultMutation(scope, "delete", personCustomDelete);
}

export function usePersonCustomUpdate() {
  const { personCustomUpdate } = requests();
  return useDefaultMutation(scope, "update", personCustomUpdate);
}

export function usePersonCustomGet(id: number) {
  const { personCustomGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => personCustomGet(id),
  });
}
