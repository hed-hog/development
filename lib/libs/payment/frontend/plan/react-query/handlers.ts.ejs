import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "plan";

export function usePlanCreate() {
  const { planCreate } = requests();
  return useDefaultMutation(scope, "create", planCreate);
}

export function usePlanDelete() {
  const { planDelete } = requests();
  return useDefaultMutation(scope, "delete", planDelete);
}

export function usePlanUpdate() {
  const { planUpdate } = requests();
  return useDefaultMutation(scope, "update", planUpdate);
}

export function usePlanGet(id: number) {
  const { planGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => planGet(id),
  });
}
