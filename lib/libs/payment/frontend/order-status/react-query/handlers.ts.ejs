import { useDefaultMutation } from "@/hooks/use-default-mutation";
import { useQuery } from "@tanstack/react-query";
import { requests } from "./requests";

const scope = "order-status";

export function useOrderStatusCreate() {
  const { orderStatusCreate } = requests();
  return useDefaultMutation(scope, "create", orderStatusCreate);
}

export function useOrderStatusDelete() {
  const { orderStatusDelete } = requests();
  return useDefaultMutation(scope, "delete", orderStatusDelete);
}

export function useOrderStatusUpdate() {
  const { orderStatusUpdate } = requests();
  return useDefaultMutation(scope, "update", orderStatusUpdate);
}

export function useOrderStatusGet(id: number) {
  const { orderStatusGet } = requests();
  return useQuery({
    queryKey: [scope, "get"],
    queryFn: () => orderStatusGet(id),
  });
}
