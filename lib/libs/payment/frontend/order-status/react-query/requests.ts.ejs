import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { OrderStatus } from "@/types/models";
import { HttpMethod } from "@/types/http-method";
import { formatDataWithLocale } from "@hedhog/utils";

export function requests() {
  const { request } = useApp();

  const orderStatusList = async (params: PaginationParams) => {
    return request<PaginationResult<OrderStatus>>({
      url: "/order-status",
      params,
    }).then((res) => res.data);
  };

  const orderStatusGet = async (id: number) => {
    return request<OrderStatus>({
      url: `/order-status/${id}`,
    }).then((res) => res.data);
  };

  const orderStatusCreate = async (params: { data: OrderStatus }) => {
    const { data } = params;
    return request<OrderStatus>({
      url: "/order-status",
      method: HttpMethod.POST,
      data: formatDataWithLocale(data),
    }).then((res) => res.data);
  };

  const orderStatusDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/order-status",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const orderStatusUpdate = async (params: {
    id: number;
    data: OrderStatus;
  }) => {
    const { id, data } = params;
    return request<OrderStatus>({
      url: `/order-status/${id}`,
      method: HttpMethod.PATCH,
      data: formatDataWithLocale(data),
    }).then((res) => res.data);
  };

  return {
    orderStatusCreate,
    orderStatusUpdate,
    orderStatusDelete,
    orderStatusList,
    orderStatusGet,
  };
}
