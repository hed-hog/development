import { useApp } from "@/hooks/use-app";
import { Delete, PaginationParams, PaginationResult } from "@/types";
import { PersonContact } from "@/types/models";
import { HttpMethod } from "@/types/http-method";

export function requests() {
  const { request } = useApp();

  const personContactList = async (params: PaginationParams) => {
    return request<PaginationResult<PersonContact>>({
      url: "/person-contact",
      params,
    }).then((res) => res.data);
  };

  const personContactGet = async (id: number) => {
    return request<PersonContact>({
      url: `/person-contact/${id}`,
    }).then((res) => res.data);
  };

  const personContactCreate = async (data: PersonContact) => {
    return request<PersonContact>({
      url: "/person-contact",
      method: HttpMethod.POST,
      data: data,
    }).then((res) => res.data);
  };

  const personContactDelete = async (ids: number[]) => {
    return request<Delete>({
      url: "/person-contact",
      data: { ids },
      method: HttpMethod.DELETE,
    }).then((res) => res.data);
  };

  const personContactUpdate = async (params: {
    id: number;
    data: PersonContact;
  }) => {
    const { id, data } = params;
    return request<PersonContact>({
      url: `/person-contact/${id}`,
      method: HttpMethod.PATCH,
      data: data,
    }).then((res) => res.data);
  };

  return {
    personContactCreate,
    personContactUpdate,
    personContactDelete,
    personContactList,
    personContactGet,
  };
}
